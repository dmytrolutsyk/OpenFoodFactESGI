<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/row_success_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/logo_success"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_success_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:hint="success_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/row_success_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_success_description"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:hint="success_description"
        app:layout_constraintStart_toStartOf="@+id/row_success_title"
        app:layout_constraintTop_toBottomOf="@+id/row_success_title" />

</androidx.constraintlayout.widget.ConstraintLayout>